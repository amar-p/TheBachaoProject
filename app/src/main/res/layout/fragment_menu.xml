<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menu"
    android:id="@+id/table_menu_container">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_search_location"
            android:background="@drawable/menu_search"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp"
            android:layout_column="11" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_get_reviews"
            android:background="@drawable/menu_reviews"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp"
            android:layout_column="2" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_write_review"
            android:background="@drawable/menu_write"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="2dp"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_location"
            android:background="@drawable/menu_loc"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="8dp"
            android:layout_column="0" />
    </TableRow>
</TableLayout>